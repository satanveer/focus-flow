# Appwrite Configuration
VITE_APPWRITE_ENDPOINT=https://fra.cloud.appwrite.io/v1
VITE_APPWRITE_PROJECT_ID=your_project_id_here
VITE_APPWRITE_DATABASE_ID=your_database_id_here

# Collection IDs
VITE_APPWRITE_TASKS_COLLECTION_ID=tasks
VITE_APPWRITE_POMODORO_COLLECTION_ID=pomodoro_sessions
VITE_APPWRITE_NOTES_COLLECTION_ID=notes
VITE_APPWRITE_FOLDERS_COLLECTION_ID=folders
VITE_APPWRITE_SETTINGS_COLLECTION_ID=user_settings

# Server API Key (keep this secret, only for server-side operations)
APPWRITE_API_KEY=your_server_api_key_here

# Google OAuth Authentication Credentials
# Get these from: https://console.cloud.google.com/ -> APIs & Services -> Credentials
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Google Calendar Integration Credentials (separate from OAuth)
# Provide these when you have them
VITE_GOOGLE_CALENDAR_CLIENT_ID=your_calendar_client_id_here
VITE_GOOGLE_CALENDAR_CLIENT_SECRET=your_calendar_client_secret_here